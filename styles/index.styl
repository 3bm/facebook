
*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Source Code Pro', monospace

p
  font-size 1.3em

.fb-color
  background-color #3b5999

.center
  text-align center

.head-text
  text-transform uppercase
  color #fff

.green
  color palegreen

.grey 
  color #d3d3d3

.propaganda
  padding-right 10% 
  padding-left 10%
  padding-top 2%
  padding-bottom 2%
  border-bottom #3b5999 0.7em solid

.smaller
  font-size 0.75em
  color darkgrey

.quote
  padding-left 20%
  color darkgrey

.smile
  font-family Arial
  font-size 0.8em

.harsh
  text-align right
  color #3b5999

.line
  background #3b5999
  color #334455

.link
  padding 3px
  font-size 0.9em

.right
  border-right 8%
  text-align right
  background #E8FFC2

.left
  text-align left
  border-left 8%
  background #DCEFE8

.note
  font-style italic

.facebook
  background #3b5999

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px

.fontana
  font-family: museo-slab,Georgia,"Times New Roman",Times,serif  

