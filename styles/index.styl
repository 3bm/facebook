@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Source Code Pro', monospace

.header-fb-color
  background-color #3b5999

.head-text
  font-weight 800
  font-size 50px
  text-align center
  padding 40px
  text-transform uppercase
  color #fff

.propaganda
  padding-right 10% 
  padding-left 10%
  padding-top 2%
  padding-bottom 2%
  border-bottom #3b5999 0.7em solid

  p::first-letter 
    font-weight bold
    font-size 1.4em
    color #3b5999

.smaller
  font-size 0.75em
  color darkgrey

.smile
  text-align center
  color #fff
  font-family Arial
  font-size 0.6em

.harsh
  text-align right
  color #3b5999

.line
  background #3b5999
  text-align center
  color #334455

.link
  padding 3px
  font-size 0.9em

.right
  border-right 8%
  text-align right
  background #E8FFC2

.left
  text-align left
  border-left 8%
  background #DCEFE8

.nav
  background #000
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px

.fontana
  font-family: museo-slab,Georgia,"Times New Roman",Times,serif  

